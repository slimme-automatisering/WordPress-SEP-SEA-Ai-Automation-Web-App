FROM node:20-alpine

# Installeer Chrome dependencies
RUN apk add --no-cache \
    chromium \
    nss \
    freetype \
    freetype-dev \
    harfbuzz \
    ca-certificates \
    ttf-freefont \
    nodejs \
    yarn

# Zet Puppeteer om Chromium te gebruiken
ENV PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true \
    PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

WORKDIR /app

# Kopieer package.json en .npmrc
COPY package.json .npmrc ./

# Installeer dependencies in stappen
RUN npm install --legacy-peer-deps && \
    npm install puppeteer@21.6.1 --legacy-peer-deps && \
    npm install openai@4.24.1 --legacy-peer-deps && \
    npm audit fix --force

# Kopieer de rest van de applicatie
COPY . .

# Start de applicatie
CMD ["npm", "run", "dev"]
